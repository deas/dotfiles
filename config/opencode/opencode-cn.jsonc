{
  "$schema": "https://opencode.ai/config.json",
  "provider": {},
  // CHOICE: DeepSeek V3.2 Speciale
  // WHY: Currently the gold standard for Chinese coding models.
  // It rivals Claude 3.5/4.5 on SWE-bench (73.1% success rate)
  // and is significantly cheaper for deep debugging and refactoring.
  "model": "openrouter/deepseek/deepseek-v3.2",

  // CHOICE: MiniMax M2.1 or MiMo-V2-Flash
  // WHY: M2.1 is optimized for agentic tool use and speed.
  // If you want a free alternative that is surprisingly capable
  // for small edits, use "xiaomi/mimo-v2-flash:free".
  "small_model": "openrouter/minimax/minimax-m2.1",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "http://localhost:8080/mcp",
      // "headers": {
      //  "CONTEXT7_API_KEY": "YOUR_API_KEY"
      // },
      "enabled": true,
    },
  },
  "plugin": [
    "opencode-gemini-auth@latest",
    "opencode-pty",
    // "oh-my-opencode",
    // "opencode-notifier",
    "opencode-zellij-namer",
    // "opencode-skillful",
  ],
  // instructions should be harnomonic across clis
  "instructions": ["CONVENTIONS.md", "AGENTS.md"],
  // "permission": "allow",
  "permission": {
    "*": "ask",
    // "bash": "allow",
    // "edit": "deny",
  },
}
