{
  "$schema": "https://opencode.ai/config.json",
  "provider": {},
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-sonnet-4.5",
  // "model": "openrouter/minimax/minimax-m2",
  // "small_model": "openrouter/minimax/minimax-m2",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "http://localhost:8080/mcp",
      // "headers": {
      //  "CONTEXT7_API_KEY": "YOUR_API_KEY"
      // },
      "enabled": true,
    },
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "tavily-mcp@latest"],
      "environment": {
        "TAVILY_API_KEY": "{env:TAVILY_API_KEY}",
      },
    },
    "brave-search": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "environment": {
        // Need to register for Brave Search API key and set it in your environment variables for this to work:wq
        // Free tier exists, but requires subscription with credit card
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}",
      },
    },
  },
  "plugin": [
    "opencode-gemini-auth@latest",
    "opencode-pty",
    // "oh-my-opencode",
    // "opencode-notifier",
    // "opencode-zellij-namer",
    // "opencode-skillful",
  ],
  // instructions should be harnomonic across clis
  "instructions": ["CONVENTIONS.md", "AGENTS.md"],
